<h1> Informações sobre o Filme: <%= @movie.title %></h1>

<% if flash[:notice] %>
  <div style="margin: 10px 0px">
    <%= flash[:notice] %>
  </div>
<% end%>

<%= link_to 'Editar', edit_movie_path %>

<dl>
  <dt>
    <strong>Título:</strong> <%= @movie.title %>
  </dt>
  <dd>
    <strong> Ano: </strong> <%= @movie.year %>
  </dd>
  <dd>
    <strong> Sinopse: </strong> <%= @movie.summary %>
  </dd>
  <dd>
    <strong> País de origem: </strong> <%= @movie.country %>
  </dd>
  <dd>
    <strong> Duração em minutos: </strong> <%= @movie.duration %>
  </dd>
  <dd>
    <strong> Diretor: </strong> 
    <% if @movie.director_id %>
      <%= link_to @movie.director.name, director_path(@movie.director) %>
    <% end %>
  </dd>
  <dd>
    <strong> Gênero: </strong> 
    <% if @movie.genre_id %>
      <%= link_to @movie.genre.name, genre_path(@movie.genre) %>
    <% end %>
  </dd>
