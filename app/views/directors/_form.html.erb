<%= form_with model: director do | f | %>
  <%= f.label 'Nome' %>
  <%= f.text_field :name %>

  <%= f.label 'Nacionalidade' %>
  <%= f.text_field :nationality %>

  <%= f.label 'Aniversário' %>
  <%= f.text_field :data_birth %>

  <%= f.label 'Gênero favorito' %>
  <%= f.collection_select :favorite_genre_id, Genre.all, :id, :name %>
  
  <%= f.submit 'Salvar' %>

<% end %>
